<tiles-definitions>
    <definition name="page_home" template="/WEB-INF/layouts/standard/page.jsp">
        <put-attribute name="header" value="/WEB-INF/layouts/standard/header.jsp"/>
        <put-attribute name="navigation" value="/WEB-INF/layouts/standard/navigation.jsp"/>
        <put-attribute name="footer" value="/WEB-INF/layouts/standard/footer.jsp"/>
    </definition>

    <definition name="page.content" template="/WEB-INF/views/templates/contentTemplate.jsp">
        <put-attribute name="successMessageTemplate" value="/WEB-INF/views/templates/successMessage.jsp"/>
        <put-attribute name="errorMessageTemplate" cascade="true">
            <definition template="/WEB-INF/views/templates/errorMessage.jsp">
                <!--put-attribute name="error.message" cascade="true" value="default.error.message" /-->
            </definition>
        </put-attribute>
    </definition>

</tiles-definitions>