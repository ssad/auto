<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="mongoTemplate" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="org.springframework.data.mongodb.core.MongoOperations"/>
    </bean>

    <bean id="gridfsOperations" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="org.springframework.data.mongodb.gridfs.GridFsOperations"/>
    </bean>
</beans>