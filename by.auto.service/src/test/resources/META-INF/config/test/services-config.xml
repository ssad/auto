<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:integration="http://www.springframework.org/schema/integration"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
			http://www.springframework.org/schema/integration
			http://www.springframework.org/schema/integration/spring-integration.xsd">

    <bean id="mongoOperations" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="org.springframework.data.mongodb.core.MongoOperations"/>
    </bean>
    <bean id="accountRepository" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="by.auto.persistence.repository.mongo.AccountRepository"/>
    </bean>


    <import resource="classpath:/META-INF/config/services-config.xml"/>

    <integration:channel id="emailChannel"/>

    <integration:channel id="queueChannel">
        <integration:queue />
    </integration:channel>

    <integration:bridge input-channel="emailChannel" output-channel="queueChannel"/>

    <context:property-override location="classpath:/services.override.properties"/>
</beans>
